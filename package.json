{
  "name": "concordialang-ui-core",
  "version": "1.0.0",
  "description": "The Concordia UI Prototyper core",
  "main": "./dist/src/index.js",
  "scripts": {
    "test": "jest --setupFiles dotenv/config",
    "prepare": "npm run build",
    "build": "tsc",
    "dev": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concordialang/ui-core.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/concordialang/ui-core/issues"
  },
  "homepage": "https://github.com/concordialang/ui-core#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/dotenv": "^6.1.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.spec\\.ts$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "database-js": "^3.0.8",
    "database-js-json": "^1.2.1",
    "dotenv": "^7.0.0"
  }
}
